<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotGate"
    android:paddingBottom="20dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Switch
            android:id="@+id/notswitch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Static/Interactive"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/notimageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/not"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            />

        <ImageView
            android:id="@+id/notimageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nottt"
            android:layout_below="@id/notimageView"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            />

        <ImageView
            android:id="@+id/notimageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/inter_not"
            android:layout_below="@id/notimageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/inpA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="A"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@id/notimageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:paddingRight="130dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/opY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Y"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@id/notimageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:paddingLeft="130dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/nottextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOT GATE : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            />

        <ToggleButton
            android:id="@+id/nottoggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            app:srcCompat="@drawable/inter_not"
            android:layout_below="@id/notimageView2"
            android:layout_alignLeft="@id/notimageView6"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            android:textOff="0"
            android:textOn="1"
            android:textSize="25sp"
            android:background="#D2D6CF"
            android:scaleX="0.7"
            android:scaleY="0.7"
            />

        <TextView
            android:id="@+id/nottextView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_below="@id/notimageView2"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:visibility="gone"
            android:textAlignment="viewEnd"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
    </RelativeLayout>
</ScrollView>