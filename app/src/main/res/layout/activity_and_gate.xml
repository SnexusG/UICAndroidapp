<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndGate"
    android:padding="10dp"
>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Static/Interactive"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/and"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/andtt"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/inter_and2"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AND GATE : "
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        app:srcCompat="@drawable/inter_and"
        android:layout_below="@id/imageView2"
        android:layout_alignLeft="@id/imageView6"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:textOff="0"
        android:textOn="1"
        android:textSize="25sp"
        android:background="#D2D6CF"
        android:scaleX="0.7"
        android:scaleY="0.7"
        />
    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        app:srcCompat="@drawable/inter_and"
        android:layout_below="@id/imageView2"
        android:layout_alignLeft="@id/imageView6"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        android:textOff="0"
        android:textOn="1"
        android:textSize="25sp"
        android:background="#D2D6CF"
        android:scaleX="0.7"
        android:scaleY="0.7"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:textAlignment="viewEnd"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    </RelativeLayout>
</ScrollView>